<!-- nav bar responds to the user or admin state -->
<div id="top">
 <div id="nav">
  <div id ="push-down">
    <ul>
      <% if signed_in? %>
        <li><%= link_to @current_user.full_name, profile_path(@current_user.profile_name)  %></li>
        <li><%= link_to 'Find a Buddy', users_path  %></li>
        <li><%= link_to 'Manage Buddies', user_friendships_path %></li>
          <% if current_user.profile_name == "paul" %>
              <li><%= link_to "My Messages", questions_path %></li>
          <% end %>
        <li><%= link_to "Log out",signout_path, method: 'delete' %></li>

      <% else if current_admin  %>
        <li><%= link_to current_admin.branch, current_admin %></li>
        <li><%= link_to 'Manage Complaints', complaints_path  %></li>
        <li><%= link_to 'Contact Us', contact_path  %></li>
        <li><%= link_to 'About', about_path  %></li>
        <li><%= link_to "Home", root_path %></li>
        <li><%= link_to "Log out",signout_path, method: 'delete' %></li>
     <% else %>
        <li><%= link_to 'Contact Us', contact_path  %></li>
        <li><%= link_to 'About', about_path  %></li>
        <li><%= link_to "Home", root_path %></li>
     </ul>
     <% end %>
    <% end %>
  </div>
 </div>
</div>

