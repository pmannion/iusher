<div id="plain-wrapper">
<div class="page-header">
  <h4>Buddy List(<%= @user_friendships.size %>)</h4>
</div>
  <div id="contactpic">
    <%= image_tag ("contacts.jpg") %>
    <br/>
    <br/>
    <h3>Grow your Buddy list, it's fun !</h3>
  </div>

  <div id="contact-border">
<% @user_friendships.each do |friendship| %>
    <% friend = friendship.friend %>
    <div id="<%= dom_id(friendship) %>" class="friend row">
      <div class="span1">
        <%= link_to image_tag(friend.avatar), profile_path(friend) %>
      </div>

      <div class="span7">
        <strong><%= friend.full_name %></strong><br />
        <% if friendship.pending? %>
            <em>Buddy is pending.</em> <%= link_to "Delete request", edit_user_friendship_path(friendship) %>.
        <% end %>
        <% if friendship.requested? %>
            <em>Wants to be your buddy.</em> <%= link_to "Accept", edit_user_friendship_path(friendship) %>    <%= link_to "Delete", edit_user_friendship_path(friendship) %>
        <% end %>
        <% if friendship.accepted? %>
            <em>A buddy since <%= friendship.updated_at %>.</em> <%= link_to "Update your buddy", edit_user_friendship_path(friendship) %>.
        <% end %>
      </div>
    </div>

<% end %>
  </div>
  </div>