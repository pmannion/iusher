<% if current_user %>
<div id="plain-wrapper">
  <%= form_for @user_friendship, method: :post do |form| %>
    <div class="form form-actions">
      <%= form.hidden_field :friend_id, value: @friend.profile_name %>
      <%= submit_tag "Connect Me !", class: "btn btn-primary" %>
      <%= link_to "Cancel", current_user, class: "btn btn-warning" %>
    </div>
<% end %>
</div>

    <% else if !current_user  %>
        <div id="center">
          <p id="intro1"><span>Whoops !</span><br/>
            Nothing to see<br/> on this page</p>
          <p id="subintro1">Get me<br/>Out of here</p>
          <%= link_to "Home", root_path, class: "green button1" %>
          <!--use this link to return to the current users profile path-->
        </div>

    <% end %>
<% end %>

