
<div id="plain-wrapper">
  <% if @admin %>
<h1>Listing complaints</h1>
<center>
<table>
  <tr>
    <th>Branch</th>
    <th>Screen</th>
    <th>Seat</th>
    <th>Longitude</th>
    <th>Latitude</th>
    <th>Trust Level</th>
    <th></th>
    <th></th>
  </tr>


<% @complaints.each do |complaint| %>

  <tr class= "<%= cycle('list_line_odd', 'list_line_even') %>">
    <td><%= complaint.branch %></td>
    <td><%= complaint.screen %></td>
    <td><%= complaint.seat %></td>
    <td><%= complaint.longitude %></td>
    <td><%= complaint.latitude %></td>
    <td><%= complaint.trust_level %></td>
    <td><%= link_to 'Show', complaint %></td>
    <td><%= link_to 'Edit', edit_complaint_path(complaint) %></td>
    <td><%= link_to 'Destroy', complaint, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>

</table>
  <div id="paginate">
    <%= will_paginate @complaints %>
  </div>
</center>
<br />

<%= link_to 'New Complaint', new_complaint_path %>
  <% else  %>
    <h3>Nothing to see here !</h3>
      <!--use this link to return to the current users profile path-->

  <% end %>

</div>
