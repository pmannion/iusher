<h1>Edit My Details</h1>
<div id="center">
<div id="edit-complaint">

  <%= form_for (@user), :html => { :multipart => true } do |f| %>
      <% if @user.errors.any? %>
          <div id="error_explanation">
            <h3><%= pluralize(@user.errors.count, "error") %> prohibited this post from being saved:</h3>

            <ul>
              <% @user.errors.full_messages.each do |msg| %>
                  <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
      <% end %>

      <p>Current Avatar</p>
      <% if f.object.pic? %>
         <%= image_tag f.object.pic.url %>
      <% end %>
      <p></p>

      <%= f.file_field :pic, as: :file %>
      <hr/>
      <%= f.label :first_name %><br/>
      <%= f.text_field :first_name %> <br />

      <%= f.label :last_name %><br />
      <%= f.text_field :last_name %><br />

      <%= f.label :profile_name %><br/>
      <%= f.text_field :profile_name %><br />

      <%= f.label :email %> <br/>
      <%= f.text_field :email %><br />

      <%= f.label :password %><br/>
      <%= f.password_field :password %><br />
      <br/>
      <%= f.submit "Update Details", class:"green button" %><br/><br/>
      <%= link_to 'Back to My Profile', profile_path(@user.profile_name), class: 'btn btn-success' %><br/>
      <h3>Whoa ! This can not be undone</h3><br/>
      <%= link_to 'Delete My Account', @user, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
<% end %>
</div>
</div>