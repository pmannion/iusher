<div id="plain-wrapper">
  <div id="post">
<% @post.each do |post| %>

    <div id="post-seperate">

      <div class="status">
        <div class="row">
          <div class="span7">

            <%= post.content %>
            <div class="meta">
              <%= link_to time_ago_in_words(post.created_at) + " " + "ago", post %>
              <span class="admin">
                 <%= link_to "up", vote_post_path(@post, type: "up"), method: "post"%>
                <%= link_to "down", vote_post_path(@post, type: "down"), method: "post"%>
                <%= link_to 'Show', post %>
                 <%= link_to 'Edit', edit_post_path(post) %>
                <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %>
              </span>
            </div>
          </div>
         </div>
        </div>
       </div>
<% end %>
   </div>
  <%= will_paginate @post %>
</div>